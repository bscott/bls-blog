---
// Header component with RPG menu styling
import SoundToggle from './SoundToggle.astro';
---

<header class="header">
  <div class="header-top">
    <div class="header-spacer"></div>
    <div class="header-title-group">
      <h1 class="site-title">BRIAN'S TECH RAMBLINGS</h1>
      <p class="site-subtitle">~ LEVEL 99 TECHNOLOGIST ~</p>
    </div>
    <div class="header-controls">
      <SoundToggle />
    </div>
  </div>

  <nav class="main-nav">
    <ul class="nav-list">
      <li class="nav-item">
        <a href="/" class="nav-link">HOME</a>
      </li>
      <li class="nav-item">
        <a href="/blog" class="nav-link">QUEST LOG</a>
      </li>
      <li class="nav-item">
        <a href="/search" class="nav-link">SEARCH</a>
      </li>
      <li class="nav-item">
        <a href="/about" class="nav-link">STATUS</a>
      </li>
      <li class="nav-item">
        <a href="/rss.xml" class="nav-link">SUBSCRIBE</a>
      </li>
    </ul>
  </nav>
</header>

<style>
  /* RPG color fallbacks - use global vars if available */
  .header {
    --cyan-glow: var(--cyan-glow, #00f5d4);
    --cyan-dim: var(--cyan-dim, #0a8f7f);
    --pink-hot: var(--pink-hot, #ff3c7d);
    --text-primary: var(--text-primary, #e8e8e8);
    --text-secondary: var(--text-secondary, #a0a0b0);
    --border-light: var(--border-light, #4a4a8e);
  }

  .header {
    text-align: center;
    padding: var(--space-xl, 3rem) 0 var(--space-lg, 2rem);
    border-bottom: 2px solid var(--border-light);
    margin-bottom: var(--space-lg, 2rem);
  }

  .header-top {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 0;
  }

  .header-spacer {
    flex: 1;
    min-width: 80px;
  }

  .header-title-group {
    flex: 2;
    text-align: center;
  }

  .header-controls {
    flex: 1;
    min-width: 80px;
    display: flex;
    justify-content: flex-end;
    align-items: flex-start;
  }

  .site-title {
    font-family: 'Press Start 2P', monospace;
    font-size: 1.25rem;
    color: var(--cyan-glow);
    text-shadow:
      0 0 10px var(--cyan-glow),
      0 0 20px var(--cyan-glow),
      0 0 40px var(--cyan-dim);
    margin-bottom: 0.5rem;
    margin-top: 0;
    line-height: 1.8;
    -webkit-font-smoothing: none;
    -moz-osx-font-smoothing: grayscale;
    animation: title-glow 2s ease-in-out infinite alternate;
  }

  @keyframes title-glow {
    from {
      text-shadow: 0 0 10px var(--cyan-glow), 0 0 20px var(--cyan-glow);
    }
    to {
      text-shadow: 0 0 15px var(--cyan-glow), 0 0 30px var(--cyan-glow), 0 0 50px var(--cyan-dim);
    }
  }

  .site-subtitle {
    font-family: 'Press Start 2P', monospace;
    font-size: 0.5rem;
    color: var(--text-secondary);
    letter-spacing: 2px;
    margin: 0;
  }

  .main-nav {
    margin-top: 1.5rem;
  }

  .nav-list {
    list-style: none;
    display: flex;
    justify-content: center;
    gap: 2rem;
    flex-wrap: wrap;
    padding: 0;
    margin: 0;
  }

  .nav-item {
    position: relative;
  }

  .nav-link {
    font-family: 'Press Start 2P', monospace;
    font-size: 0.625rem;
    color: var(--text-primary);
    text-decoration: none;
    padding: 0.5rem 1rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    transition: color 0.2s;
  }

  .nav-link:hover,
  .nav-link:focus {
    color: var(--cyan-glow);
  }

  .nav-link:visited {
    color: var(--text-primary);
  }

  .nav-link:visited:hover {
    color: var(--cyan-glow);
  }

  /* Arrow cursor indicator */
  .nav-link::before {
    content: "";
    width: 0;
    height: 0;
    border-top: 6px solid transparent;
    border-bottom: 6px solid transparent;
    border-left: 8px solid var(--pink-hot);
    opacity: 0;
    transform: translateX(-8px);
    transition: all 0.2s;
  }

  .nav-link:hover::before,
  .nav-link:focus::before,
  .nav-link.active::before {
    opacity: 1;
    transform: translateX(0);
    animation: cursor-blink 0.5s steps(2) infinite;
  }

  @keyframes cursor-blink {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }

  /* Tablet breakpoint */
  @media (max-width: 768px) {
    .header-top {
      flex-direction: column;
      align-items: center;
    }

    .header-spacer {
      display: none;
    }

    .header-title-group {
      order: 1;
    }

    .header-controls {
      order: 2;
      justify-content: center;
      margin-top: 0.75rem;
    }

    .site-title {
      font-size: 1rem;
    }

    .nav-list {
      gap: 0.75rem;
    }

    /* Ensure 44px touch targets for navigation */
    .nav-link {
      font-size: 0.5rem;
      padding: 12px 14px;
      min-height: 44px;
      display: flex;
      align-items: center;
    }
  }

  /* Mobile breakpoint */
  @media (max-width: 480px) {
    .header {
      padding: var(--space-lg, 2rem) 0 var(--space-md, 1.5rem);
    }

    .site-title {
      font-size: 0.75rem;
      word-wrap: break-word;
      max-width: 100%;
    }

    .site-subtitle {
      font-size: 0.4rem;
    }

    .nav-list {
      gap: 0.5rem;
      justify-content: center;
    }

    .nav-link {
      font-size: 0.45rem;
      padding: 12px 10px;
      min-height: 44px;
    }

    /* Hide arrow indicator on mobile to save space */
    .nav-link::before {
      display: none;
    }
  }
</style>
