---
import BaseLayout from './BaseLayout.astro';
import TableOfContents, { type Heading } from '../components/TableOfContents.astro';
import RelatedPosts from '../components/RelatedPosts.astro';
import { getReadingTime } from '../utils/readingTime';

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  updatedDate?: Date;
  tags: string[];
  headings: Heading[];
  body: string;
  slug: string;
}

const { title, description, pubDate, updatedDate, tags, headings, body, slug } = Astro.props;

const readingTime = getReadingTime(body);

// Extract just the number from reading time (e.g., "5 min read" -> "5")
const readingMinutes = readingTime.replace(/[^0-9]/g, '');

function formatDate(date: Date): string {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'short',
    day: '2-digit'
  }).toUpperCase();
}
---

<BaseLayout title={title} description={description} ogType="article">
  <article class="blog-post">
    <div class="dialog-box post-container">
      <header class="post-header">
        <h1 class="post-title">{title}</h1>
        <div class="post-meta">
          <span class="quest-duration">DURATION: {readingMinutes} MIN</span>
          <span class="quest-date">
            <time datetime={pubDate.toISOString()}>
              {formatDate(pubDate)}
            </time>
          </span>
          {updatedDate && (
            <span class="quest-updated">
              UPDATED: <time datetime={updatedDate.toISOString()}>{formatDate(updatedDate)}</time>
            </span>
          )}
        </div>
        {tags.length > 0 && (
          <div class="post-tags">
            {tags.map(tag => (
              <a href={`/blog/tags/${tag}`} class="tag">{tag}</a>
            ))}
          </div>
        )}
      </header>

      <TableOfContents headings={headings} />

      <div class="post-content">
        <slot />
      </div>

      {tags.length > 0 && (
        <footer class="post-footer">
          <p class="tagged-with">TAGGED WITH:</p>
          <div class="footer-tags">
            {tags.map(tag => (
              <a href={`/blog/tags/${tag}`} class="tag">{tag}</a>
            ))}
          </div>
        </footer>
      )}
    </div>

    {tags.length > 0 && (
      <RelatedPosts currentSlug={slug} tags={tags} />
    )}
  </article>
</BaseLayout>

<style>
  .blog-post {
    margin-bottom: var(--space-xl);
  }

  .post-container {
    padding: var(--space-lg);
  }

  .post-header {
    margin-bottom: var(--space-lg);
    padding-bottom: var(--space-md);
    border-bottom: 2px dashed var(--border-light);
  }

  .post-title {
    margin-top: 0;
    margin-bottom: var(--space-sm);
    font-size: 0.875rem;
    line-height: 2;
    animation: title-glow 2s ease-in-out infinite alternate;
  }

  .post-meta {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
    align-items: center;
    font-family: var(--font-pixel);
    font-size: 0.5rem;
    margin-bottom: var(--space-sm);
  }

  .quest-duration {
    color: var(--mp-blue);
  }

  .quest-duration::before {
    content: "\u29D7";
    margin-right: 4px;
  }

  .quest-date {
    color: var(--text-dim);
  }

  .quest-date::before {
    content: "\u25C8";
    margin-right: 4px;
    color: var(--purple-accent);
  }

  .quest-updated {
    color: var(--gold-xp);
  }

  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin-top: var(--space-sm);
  }

  .post-content {
    margin-top: var(--space-lg);
    color: var(--text-primary);
    line-height: 1.7;
  }

  /* Prose styles for dark theme */
  .post-content :global(p) {
    margin-bottom: var(--space-md);
    color: var(--text-secondary);
  }

  .post-content :global(strong) {
    color: var(--text-primary);
    font-weight: 700;
  }

  .post-content :global(em) {
    color: var(--text-secondary);
  }

  .post-content :global(ul),
  .post-content :global(ol) {
    color: var(--text-secondary);
    margin-bottom: var(--space-md);
    padding-left: var(--space-lg);
  }

  .post-content :global(li) {
    margin-bottom: 0.5rem;
  }

  .post-content :global(li::marker) {
    color: var(--pink-hot);
  }

  .post-content :global(h2) {
    margin-top: var(--space-xl);
    padding-top: var(--space-md);
    border-top: 2px dashed var(--border-outer);
  }

  .post-content :global(h3) {
    margin-top: var(--space-lg);
  }

  .post-content :global(a) {
    color: var(--cyan-glow);
    text-decoration: underline;
    text-decoration-style: dotted;
  }

  .post-content :global(a:hover) {
    color: var(--pink-hot);
    text-decoration-style: solid;
  }

  .post-content :global(img) {
    border: 4px solid var(--border-light);
    box-shadow:
      inset 4px 4px 0 0 var(--border-highlight),
      inset -4px -4px 0 0 var(--border-outer);
  }

  .post-footer {
    margin-top: var(--space-xl);
    padding-top: var(--space-lg);
    border-top: 2px dashed var(--border-light);
  }

  .tagged-with {
    font-family: var(--font-pixel);
    font-size: 0.5rem;
    color: var(--text-dim);
    margin-bottom: var(--space-xs);
  }

  .footer-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
  }

  /* Tablet breakpoint */
  @media (max-width: 768px) {
    .post-container {
      padding: var(--space-md);
    }

    .post-title {
      font-size: 0.75rem;
      line-height: 2.2;
    }

    .post-meta {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--space-xs);
    }

    /* Tags - ensure touch targets */
    .post-tags .tag,
    .footer-tags .tag {
      padding: 10px 14px;
      min-height: 44px;
      display: inline-flex;
      align-items: center;
    }

    .post-tags,
    .footer-tags {
      gap: 10px;
    }

    /* Ensure line lengths are readable */
    .post-content {
      max-width: 100%;
    }

    .post-content :global(p),
    .post-content :global(li) {
      font-size: 1rem; /* Minimum 16px for readability */
    }
  }

  /* Mobile breakpoint */
  @media (max-width: 480px) {
    .blog-post {
      margin-bottom: var(--space-lg);
    }

    .post-container {
      padding: var(--space-sm);
    }

    .post-header {
      margin-bottom: var(--space-md);
      padding-bottom: var(--space-sm);
    }

    .post-title {
      font-size: 0.625rem;
      line-height: 2.4;
    }

    .post-meta {
      font-size: 0.45rem;
    }

    /* Post content - full width, readable */
    .post-content {
      margin-top: var(--space-md);
    }

    .post-content :global(h2) {
      font-size: 0.625rem;
      margin-top: var(--space-lg);
      padding-top: var(--space-sm);
    }

    .post-content :global(h3) {
      font-size: 0.5rem;
      margin-top: var(--space-md);
    }

    /* Ensure body text stays at 16px for readability */
    .post-content :global(p) {
      font-size: 1rem;
      margin-bottom: var(--space-sm);
    }

    .post-content :global(ul),
    .post-content :global(ol) {
      padding-left: var(--space-md);
    }

    .post-content :global(li) {
      font-size: 1rem;
    }

    /* Code blocks - readable on mobile */
    .post-content :global(pre) {
      padding: var(--space-xs);
      font-size: 0.8rem;
      margin-left: 0;
      margin-right: 0;
    }

    .post-content :global(code) {
      font-size: 0.9rem;
    }

    /* Images - full width */
    .post-content :global(img) {
      margin-left: 0;
      margin-right: 0;
    }

    .post-footer {
      margin-top: var(--space-lg);
      padding-top: var(--space-md);
    }

    .tagged-with {
      font-size: 0.45rem;
    }
  }
</style>
