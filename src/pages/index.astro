---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';

// Get all blog posts, sort by date, filter out drafts
const allPosts = await getCollection('blog', ({ data }) => {
  return data.draft !== true;
});

const posts = allPosts
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 5); // Show 5 most recent posts

function formatDate(date: Date): string {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}
---

<BaseLayout
  title="Brian's Tech Ramblings"
  description="A minimalist blog with a retro-web aesthetic"
>
  <section class="intro">
    <h1>Brian's Tech Ramblings</h1>
    <p>Welcome to my blog. A minimalist space for thoughts, code, and ideas.</p>
  </section>

  <section class="recent-posts">
    <h2>Recent Posts</h2>
    {posts.length === 0 ? (
      <p>No posts yet. Check back soon!</p>
    ) : (
      <ul class="post-list">
        {posts.map(post => (
          <li>
            <article>
              <h3>
                <a href={`/blog/${post.slug}`}>{post.data.title}</a>
              </h3>
              <time datetime={post.data.pubDate.toISOString()}>
                {formatDate(post.data.pubDate)}
              </time>
              <p>{post.data.description}</p>
              {post.data.tags.length > 0 && (
                <div class="tags">
                  {post.data.tags.map(tag => (
                    <a href={`/blog/tags/${tag}`} class="tag">[{tag}]</a>
                  ))}
                </div>
              )}
            </article>
          </li>
        ))}
      </ul>
    )}
    <p>
      <a href="/blog">[view all posts â†’]</a>
    </p>
  </section>
</BaseLayout>

<style>
  .intro {
    margin-bottom: var(--space-xl);
  }

  .intro h1 {
    margin-top: 0;
  }

  .recent-posts h2 {
    margin-top: 0;
    margin-bottom: var(--space-lg);
  }

  .post-list {
    list-style: none;
    padding-left: 0;
  }

  .post-list li {
    margin-bottom: var(--space-xl);
  }

  .post-list article {
    border-bottom: 1px solid var(--color-border);
    padding-bottom: var(--space-lg);
  }

  .post-list h3 {
    margin-top: 0;
    margin-bottom: 0.5rem;
  }

  .post-list time {
    display: block;
    color: var(--color-text-muted);
    font-size: 0.9rem;
    margin-bottom: 0.5rem;
  }

  .post-list p {
    margin-bottom: var(--space-sm);
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: var(--space-sm);
  }

  .tag {
    font-family: var(--font-mono);
    font-size: 0.85rem;
    color: var(--color-text);
    text-decoration: none;
    background-color: var(--color-code-bg);
    padding: 0.2em 0.5em;
    border-radius: 3px;
  }

  .tag:hover {
    text-decoration: underline;
  }

  .tag:visited {
    color: var(--color-text);
  }
</style>
